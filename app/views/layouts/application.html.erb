<!DOCTYPE html>
<html>
<head>
  <link type="png" href="/assets/appicon.png"/>
  <title>Let's Vlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body  style="background:#aaaae71a;">
<% if user_signed_in? %>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid" style="top:5px;">
      <div class="navbar-header active" >     
        <div class="heading_image"><img src="/assets/appicon.png" class="heading_image" style="float:left;height:35px;width:35px;margin-top:11px;cursor:pointer"><a href="/" class="navbar-brand" style="margin-top:10px;margin-left:-24px;cursor:pointer">logs</a></div>
      </div>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to('NewsFeed',root_url,:style=>"top:5px;") %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <img src="/assets/profile.png" style="height:30px;width:30px;"> 
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to("Change Password","/users/password/edit") %>
            </li>
            <li>
              <%= link_to("Edit Profile","#") %>
            </li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
<% else %>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid" style="top:5px;">
      <div class="navbar-header active" >     
        <div class="heading_image"><img src="/assets/appicon.png" class="heading_image" style="float:left;height:35px;width:35px;margin-top:11px;cursor:pointer"><a href="/" class="navbar-brand" style="margin-top:10px;margin-left:-24px;cursor:pointer">logs</a></div>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to('Sign In',"/users/sign_in",:style=>"top:5px;") %>
        </li>
        <li>
          <%= link_to('Sign Up',"/users/sign_up",:style=>"top:5px;") %>
        </li>
      </ul>
    </div>
  </nav>
<% end %>
<% if notice %>
  <div class="alert alert-dismissible alert-info" style="margin: 31px;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong><%= notice %></strong>
  </div>
<% end %>
<%= yield %>

</body>
<script type="text/javascript">
  $(".heading_image").on("click",function(){
    window.location.href="/";
  })
</script>
<style type="text/css">
  .heading_image:hover{
    -webkit-filter: brightness(500%); 
    filter: brightness(500%);
  }
</style>
</html>
