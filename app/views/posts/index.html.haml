%script{:src => "https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.21.1/sweetalert2.all.js"}
:css

  .fl {
    float:left;
  }
  .fr{
    float:right
  }
  .create_btn
  {
    padding-left: 30px;
  }
  .card{
  margin-left:30px;
  margin-right:30px;
  }
  .card:hover{
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  }
  .panel-heading{
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  }
  .delete_post
  {
    float:right;
    text-decoration: none;
    cursor:pointer;
    color:#689b58;
  }
  .delete_post:hover{
    color:#000;
  }
  .title
  {
    color:#000;
  }
  .title:hover{
    text-decoration: none;
    color:#000;
  }
  .like:hover{
    animation: shake 0.3s;
    animation-iteration-count: 2s;
  }
  .post_title:hover{
  text-decoration:none;
  }
  @keyframes shake {
    0% { transform: translate(1px, 1px) rotate(0deg); }
    10% { transform: translate(-1px, -2px) rotate(-1deg); }
    20% { transform: translate(-3px, 0px) rotate(1deg); }
    30% { transform: translate(3px, 2px) rotate(0deg); }
    40% { transform: translate(1px, -1px) rotate(1deg); }
    50% { transform: translate(-1px, 2px) rotate(-1deg); }
    60% { transform: translate(-3px, 1px) rotate(0deg); }
    70% { transform: translate(3px, 1px) rotate(-1deg); }
    80% { transform: translate(-1px, -1px) rotate(1deg); }
    90% { transform: translate(1px, 2px) rotate(0deg); }
    100% { transform: translate(1px, -2px) rotate(-1deg); }
  }
- if user_signed_in?
  %br
  .create_btn
    =link_to("WRITE A POST",posts_new_path,:class=>"btn btn-success")
  %br
  - @posts.each do |p|
    %div{:id => "#{p.id}",:style=>"overflow-x:99999999;"}
      %div.card
        %div.panel.panel-info
          %div.panel-heading
            %b
              %a.post_title{:href=>"/posts/#{p.id}",:class=>"title"}#{p.title.truncate(30).capitalize}
            -if current_user.id == p.user_id.to_i 
              %a{'data-id'=>"#{p.id}"}
              %span.glyphicon.glyphicon-trash.delete_post{:style=>"float:right;cursor:pointer",'data-id'=>"#{p.id}"}

          -if p.pictures.present?    
            %div.panel-body
              .row
                .col-sm-4.col-sm-4   
                  - p.pictures.take(4).each do |picture|
                    .col-md-6
                      %img{:src=>picture.image,:style=>"width:100%;height:100%;"}
                      %span{:style=>"clear:fix;"}
                .col-sm-8.col-sm-8
                  %b=p.description.truncate(1000)
          -else 
            %div.panel-body
              .row
                .col-md-12.col-sm-12
                  %b=p.description.truncate(1000)



          .row
            .col-md-1
              - if p.likes.where("is_liked =? and user_id =?",true,current_user.id).present?
                %div.panel-body
                  %img{:src => "/assets/unlike",:height =>"30px",:width => "30px",:id => "like_post",:class => "like_post_icon"+"#{p.id} like",:onclick => "like_post(#{p.id})" ,:style=>"cursor:pointer;"}
              -else
                %div.panel-body
                  %img{:src => "/assets/like",:height =>"30px",:width => "30px",:id => "like_post",:class => "unlike_post_icon"+"#{p.id} like",:onclick => "like_post(#{p.id})",:style=>"cursor:pointer;"}
            .col-md-3 
              %div.panel-body 
                %b Comments: 
                #{p.comments.where("is_archive =? ",false).count}     
            .col-md-3
              %div.panel-body
                %b Posted by :
                #{p.user.email}
            .col-md-4  
              %div.panel-body
                %b Posted 
                #{time_ago_in_words(p.created_at)} ago

- else
  -if @posts.present?
    - @posts.each do |p|
      %div{:id => "#{p.id}",:style=>"overflow-x:99999999;"}
        %div.card
          %div.panel.panel-info
            %div.panel-heading
              %b
                %a.post_title{:href=>"javascript:void(0)",:class=>"post_title_nonuser"}#{p.title.truncate(30).capitalize}
                
            -if p.pictures.present?    
              %div.panel-body
                .row
                  .col-sm-4.col-sm-4   
                    - p.pictures.take(4).each do |picture|
                      .col-md-6
                        %img{:src=>picture.image,:style=>"width:100%;height:100%;"}
                        %span{:style=>"clear:fix;"}
                  .col-sm-8.col-sm-8
                    %b=p.description.truncate(1000)
            -else 
              %div.panel-body
                .row
                  .col-md-12.col-sm-12
                    %b=p.description.truncate(1000)

            .row
              .col-md-4 
                %div.panel-body 
                  %b Comments: 
                  #{p.comments.where("is_archive =? ",false).count}     
              .col-md-4
                %div.panel-body
                  %b Posted by :
                  #{p.user.email}
              .col-md-4  
                %div.panel-body
                  %b Posted 
                  #{time_ago_in_words(p.created_at)} ago
  -else
    %div{:style=>"padding-left:20px;"} 
    %b 
      No posts yet...


:javascript
  $(".delete_post").click(function() 
    {
      var id = $(this).data('id');
      swal({
      title: "Are you sure?",
      text: "Once deleted, you will not be able to revert back!",
      icon: "warning",
      buttons: true,
      dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {      
        $.ajax({
          type: 'DELETE',
          url: "/posts/delete_post/"+id,
          data:{'post_id': id},
          success: function(data)
          { 
            $("#"+data).remove();
            swal("Poof! Your post has been deleted!", {
              icon: "success",
            });
          }, 
          error: function(data){ alert('error'); } 
        })
        } else 
        {
          swal("We did not delete your post");
        }
      });
      
    });


