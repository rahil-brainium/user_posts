<style type="text/css">
  .card{
    box-shadow: 0 10px 8px 0 rgba(0,0,0,0.2);
    background:#aaaae733;
    width: 75%;
    height: auto;
    margin-left: 172px;
    margin-top:  25px;
    position: fixed;
  }
  .card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
  }
.card-body{
  padding: 2px 16px;
}
.close:hover{
  text-decoration: none;
}
</style>
<div class="card">
  <div  style="float: right;padding-right:10px;padding-top: 10px;cursor: pointer;color: #060000;"><a href="/" class="close">X</a></div>
  <div style="padding-top:20px;">
  <div class="card-body">
    <%= form_for (@post),url: posts_create_path do |f| %>
      <div class="field">
        <%= f.label :Title %>
        <br/>
        <%= f.text_field :title,:class=>"form-control" %>
      </div>
      <div class="field">
        <%= f.label :Description %>
        <br/>
        <%= f.text_area :description,:class=>"form-control",:style=>"height:155px;max-width: 943px;max-height:250px;" %>
      </div>
      <br/>
      <%= f.fields_for @post_pictures do |picture| %>
        <div>
          <%= picture.label :'Upload Photo' %>
          <%= picture.file_field :image ,:multiple=>true %>
        </div>
      <% end %>

      <br/>
      <div class="actions">
        <%= button_tag "Create",:class =>"btn btn-success" %>
      </div>
      <br>
    <% end %>
  </div>
</div>
